<div class="row">
  <div class="col">
    <%= render "shared/carousel", watch: @watch %>
  </div>
  
  <div class="col align-self-center border rounded text-center bg-light d-flex flex-column m-5">
    <h1><%= @watch.name %></h1>
    <h2><%= @watch.model %></h2>
    <h2><%= @watch.brand %></h2>
    <h2>Rent this watch for only <%= @watch.price %>,00â‚¬ a week</h2>

    <p><%= @watch.description %></p>
    <div class="btn-group" role="group" aria-label="Basic example">
    <% if current_user == @watch.user %>
      <%= link_to "Delete this Watch", watch_path(@watch), class:"btn btn-secondary btn-sm btn-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
      <%= link_to "Edit this Watch", edit_watch_path(@watch), class:"btn btn-secondary btn-sm btn-secondary" %>
    <% end %>
    <%= link_to "Rent Me", new_watch_rental_path(@watch), class:"btn btn-secondary btn-sm btn-secondary" %>
  </div>
</div>
