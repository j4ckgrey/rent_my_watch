<div class="container p-5">
  <div class="py-5 text-center">
    <h1>Your Watch Collection</h1>
    <% if @mywatches.empty? %>
      <p>You have not rented a watch yet</p>
    <% else %>
      <div class="row justify-content-center">
        <% @mywatches.each do |watch| %>
          <div class="card col-3 text-center m-3">
            <%= render "shared/carousel", watch: watch %>
            <div class="card-body">
              <h5 class="fs-3"><%= watch.name %></h5>
              <%= watch.brand %> <%= watch.model %>
              <p class="card-text py-3"><%= watch.description[0, 50] %></p>
              <% if watch.rentals.any? %>
                  <p class="card-text py-3"><%= watch.rentals.last.start_date %> - <%= watch.rentals.last.end_date %></p>
                <% end %>
              <div class="btn btn-primary">
                <%= link_to "Show Me!", watch_path(watch), class: "text-white" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="py-5 text-center">
    <h1>Your Rentals</h1>
    <% if @myrentals.empty? %>
      <P>You have not rented a watch yet</P>
    <% else %>
      <div class="row justify-content-center">
        <% @myrentals.each do |watch| %>
          <div class="card col-3 text-center m-3">
            <%= render "shared/carousel", watch: watch %>
            <div class="card-body">
              <h5 class="fs-3"><%= watch.name %></h5>
              <%= watch.brand %> <%= watch.model %>
              <p class="card-text py-3"><%= watch.description[0, 50] %></p>
              <div class="btn btn-primary">
                <%= link_to "Show Me!", watch_path(watch), class: "text-white" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
