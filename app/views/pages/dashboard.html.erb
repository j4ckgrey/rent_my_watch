<div id="carouselExample" class="carousel carousel-dark slide my-3">
  <h1 class="text-center mt-3">Your Watch Collection</h1>
  <div class="carousel-inner">
    <div class="container">
      <% @mywatches.each_slice(3) do |watchs| %>
        <div class="carousel-item <%= 'active' if watchs.first == @mywatches.first  %>">
          <div class="card-group">
            <% watchs.each do |watch| %>
              <div class="card">
                <div class="card text-center m-3">
                  <div class="card-img-top py-3">
                    <div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
                      <div class="carousel-inner">
                        <%if watch.photos.present?%>
                          <% watch.photos.each do |photo| %>
                          <div class="carousel-item d-flex justify-content-center <%= "active" if photo == watch.photos.first %>">
                            <%= cl_image_tag photo.key, height: 400, width: 400, crop: :fill, class:"d-block img-thumbnail my-5"%>
                          </div>
                          <%end%>
                        <% else %>
                          <%= image_tag "default1.png", height: "400", width: "400", class:"d-block img-thumbnail my-5"%>
                        <% end %>
                      </div>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5><%= watch.name %></h5>
                    <p><%= watch.brand %> <%= watch.model %></p>
                    <% if watch.rentals.any? %>
                      <p class="card-text py-3"><%= watch.rentals.last.start_date %> - <%= watch.rentals.last.end_date %></p>
                    <% end %>
                    <%= link_to "Show Me!", watch_path(watch), class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
            <% (3 - watchs.length).times do %>
              <div class="card"></div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>

